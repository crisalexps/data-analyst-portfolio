SELECT
    SUM(quantity * price) AS total_revenue
FROM sales;

SELECT
    COUNT(DISTINCT order_id) AS total_orders
FROM sales;

SELECT
    category,
    SUM(quantity * price) AS revenue
FROM sales
GROUP BY category
ORDER BY revenue DESC;

SELECT
    region,
    SUM(quantity * price) AS revenue
FROM sales
GROUP BY region
ORDER BY revenue DESC;

SELECT
    strftime('%Y-%m', date) AS month,
    SUM(quantity * price) AS revenue
FROM sales
GROUP BY month
ORDER BY month;

SELECT
    product,
    SUM(quantity * price) AS revenue
FROM sales
GROUP BY product
ORDER BY revenue DESC
LIMIT 5;

SELECT
    SUM(quantity * price) / COUNT(DISTINCT order_id) AS avg_ticket
FROM sales;

