DROP TABLE IF EXISTS sales;

CREATE TABLE sales (
    order_id INTEGER,
    date DATE,
    customer_id TEXT,
    product TEXT,
    category TEXT,
    quantity INTEGER,
    price REAL,
    region TEXT
);


